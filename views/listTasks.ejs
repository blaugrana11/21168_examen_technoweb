<body>
    <h1>Vocabulary Test</h1>

    <h3>
    Test yourself :
    </h3>
    <p>
        How do you say :
        <%= mots[2].word %>
    </p>
    
      
    <form action="/reponse" methode="POST">
        <label for="reponse">Your answer :</label>
        <input type="text" name="reponse" />
        <button class="mon-bouton">Submit</button>
    </form>
    <h3>Vocabulary</h3>

    <% for (const mot of mots) { %>
        <%= mot.word %> - <%= mot.translation, %> - <a href="/delete/<%= mot.id_word %>">Delete</a>
      <% } %>
      
    <h3>
    Add a word :
    </h3>

    <form action="/add" method="POST">
        <div class="form-group">
        <label for="word">Word :</label>
        <input type="text" name="word" />
        </div>
        <div class="form-group">
        <label for="translation">Translation :</label>
        <input type="text" name="translation" />
        </div>
        <button class="mon-bouton">Add</button>
    </form>
    
</body>
  

